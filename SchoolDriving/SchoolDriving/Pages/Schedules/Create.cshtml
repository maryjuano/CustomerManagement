@page
@model SchoolDriving.Pages.Schedules.CreateModel

@{
    ViewData["Title"] = "Create";
}
<h4>Create Schedule</h4>
<hr />
<div class="row">
    <form method="post">
        <div class="col-md-4">

            <div asp-validation-summary=All class="text-danger"></div>                     
            <div class="form-group">
                <label class="control-label">Instructor</label>
                <select asp-for="Schedule.InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                    <option selected="selected" value="">-- Select Instructor --</option>
                </select>
                <span asp-validation-for="Schedule.InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Course</label>
                <select asp-for="Schedule.CourseId" class="form-control" asp-items="ViewBag.Courses">
                    <option selected="selected" value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="Schedule.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Start</label>
                <input type="datetime-local" asp-for="Schedule.StartDate" class="form-control" />
                <span asp-validation-for="Schedule.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">End</label>
                <input type="datetime-local" asp-for="Schedule.EndDate" class="form-control" />
                <span asp-validation-for="Schedule.EndDate" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="SAVE" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
