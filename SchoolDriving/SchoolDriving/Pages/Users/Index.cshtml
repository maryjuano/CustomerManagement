@page
@model SchoolDriving.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

<h4>System Users</h4>

<p>
    <a href="/Identity/Account/Register?returnUrl=/Users">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>                     
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>                                 
            </tr>
        }
    </tbody>
</table>
